{
    "name": "africastalking/sdk",
    "description": "PHP SDK for interacting with Africa's Talking APIs",
    "keywords": [
        "africastalking",
        "Africa's Talking",
        "php-sdk"
    ],
    "homepage": "https://github.com/samuelmwangiw/php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Africas's Talking",
            "email": "support@africastalking.com",
            "homepage": "https://www.africastalking.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/saloon": "^3.14"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1",
        "roave/security-advisories": "dev-latest",
        "spatie/ray": "^1.42"
    },
    "conflict": {
        "africastalking/africastalking": "*"
    },
    "autoload": {
        "psr-4": {
            "Africastalking\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Africastalking\\Tests\\": "tests"
        }
    },
    "scripts": {
        "pest": "vendor/bin/pest",
        "phpstan": "vendor/bin/phpstan",
        "test": "vendor/bin/pest && vendor/bin/phpstan",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
